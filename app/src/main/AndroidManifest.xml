<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.yamba">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".YambaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"

        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status"
            android:parentActivityName="com.example.android.yamba.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.yamba.MainActivity"/>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:parentActivityName="com.example.android.yamba.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.yamba.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName="com.example.android.yamba.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.yamba.MainActivity" />
        </activity>

        <service
            android:name=".StatusUpdateService"
            android:exported="false"/>
        <service
            android:name=".RefreshService"
            android:exported="false"/>

        <provider
            android:name=".StatusProvider"
            android:authorities="com.example.android.yamba.StatusProvider"
            android:enabled="true"
            android:exported="false">
        </provider>
    </application>

</manifest>
